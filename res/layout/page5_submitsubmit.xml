<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/page1itemdetailpage_blow"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bggray"
     >

    <fragment
        android:id="@+id/fragment1"
        android:name="com.exp.partFragment.Page1DetailTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <include
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                layout="@layout/page1itemdetailpagemain" />

            <Button
                android:id="@+id/callCar_submitPage_submitBtn"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/btnradius"
                android:onClick="callCar_submitPageClick"
                android:text="提交"
                android:textColor="@color/white" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>

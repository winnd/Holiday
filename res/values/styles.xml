<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="bottom_linerlayout">
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:onClick">btn_bottom_click</item>
        <item name="android:gravity">bottom</item>
    </style>
    
    <style name="bottom_linerlayoutCenter" parent="bottom_linerlayout">
        <item name="android:layout_width">60dp</item>
    </style>
    
    <style name="bottom_linerlayoutbox" parent="bottom_linerlayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>
    
     <style name="bottom_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/white</item>
    </style> 
    
     <style name="bottom_img">
         <item name="android:layout_width">match_parent</item>
         <item name="android:layout_height">25dp</item>
     </style>
    
</resources>
